<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lib/bootswatch/cyborg/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div id="top-menu" class="menu top-menu">
        <img src="https://sd.keepcalm-o-matic.co.uk/i-w600/keep-calm-i-am-net-developer.jpg" alt="KeepCalm" class="menuIcon" />
        <ul>
            <li class="active"><A asp-controller="App" asp-action="Index">Home</A></li>
            <li><A asp-controller="App" asp-action="Skills">Skills</A></li>
            <li><A asp-controller="App" asp-action="Experience">Experience</A></li>
            <li><A asp-controller="App" asp-action="About">About</A></li>
            <li><A asp-controller="App" asp-action="Contact">Contact Us</A></li>
        </ul>
    </div>
    <!--<div id="side-menu" class="menu side-menu">-->
    <div id="side-menu" class="menu side-menu">
        <ul class="nav">
            <li class="active"><A asp-controller="App" asp-action="Index">Home</A></li>
            <li><A asp-controller="App" asp-action="Skills">Skills</A></li>
            <li><A asp-controller="App" asp-action="Experience">Experience</A></li>
            <li><A asp-controller="App" asp-action="About">About</A></li>
            <li><A asp-controller="App" asp-action="Contact">Contact Us</A></li>
        </ul>
    </div>
    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div id="header" class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="btnToggleMenu" type="button" value="Toggle Menu" class="btn-sm btn-primary">
                            <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
                        </button>
                    </li>
                </ul>
                <a asp-controller="App" asp-action="Index" class="navbar-brand">IT One Solutions Ltd</a>
            </div>
        </nav>

        <div id="content" class="container-fluid">
                @RenderBody()
        </div>
        <div id="footer" class="container-fluid">
            <div class="nav navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-primary">&copy; 2017 IT One Solutions Ltd.</h4>
            </div>
        </div>
    </div>


    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>
    @RenderSection("scripts", false)
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>
