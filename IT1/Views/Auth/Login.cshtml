@model IT1.ViewModels.IT1UserViewModel
@{
    ViewBag.Title = "Login";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<h3>LOGIN PAGE</h3>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Login Page</h1>
        <form method="post" novalidate>
            
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success"/><div asp-validation-summary="ModelOnly" class="text-muted"></div>
            </div>
        </form>
    </div>
</div>
